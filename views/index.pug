doctype html
html
head
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(rel="stylesheet" href="../css/style.css")
    script(src="https://code.jquery.com/jquery.js")  
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
    title best app
body
-let User = {loggedOn: false}
    if User.loggedOn 
    
        include includes/nav
    else
        div.pink_buttons 
          a.log_in.btn-floating.btn-large.pulse(href="login") LogIn
            i.material-icons        
          a.sign_up.btn-floating.btn-large.pulse(href="signup") SignUp
            i.material-icons                  
        h1.intro Your Next Binge!

    p.text Check out a sample of the latest and greatest reviews. Create an account to be part of the conversation:

    .result_row   
    
        each review in reviews
           .result_card
                img(src=review.image, alt="", height="220px")
                h4 #{review.title}
                p #{review.reviews}

